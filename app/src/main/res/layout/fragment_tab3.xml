<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_grad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/header"
        android:layout_gravity="right"
        android:gravity="right"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:visibility="visible"
            android:id="@+id/logoimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/growth" />

        <LinearLayout
            android:visibility="visible"
            android:layout_weight="20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="WELCOME"
                android:textColor="#fff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/nametxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="MOUNIR SCALOPE"
                android:textColor="#fff"
                android:textSize="15sp" />

        </LinearLayout>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/settingsbtn"
            android:src="@mipmap/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:orientation="vertical">

            <LinearLayout
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="EARTH SPACE  (MÂ²)"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/spaceedt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_bg"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="EARTH TYPE"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/earthtypeedt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_bg"
                        android:ems="10"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp"
                    >

                    <TextView
                        android:id="@+id/txtradio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="IRRIGATION WAY"
                        android:textColor="#fff"
                        android:textSize="15sp" />

                    <RadioGroup
                        android:id="@+id/grp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:outlineAmbientShadowColor="#fff">

                        <RadioButton
                            android:id="@+id/btn1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="SPRAY"
                            android:textColor="#ffffff"
                            android:textSize="13sp" />

                        <RadioButton
                            android:id="@+id/btn2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="SLUICE"
                            android:textColor="#ffffff"
                            android:textSize="13sp" />

                        <RadioButton
                            android:id="@+id/btn3"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="OTHER"
                            android:textColor="#ffffff"
                            android:textSize="13sp" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/plantsspin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAlignment="center" />


                    <Spinner
                        android:id="@+id/plantsnbr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAlignment="center" />


                </LinearLayout>



            </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Button
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:id="@+id/farmbtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/background_login"
                android:text="Save"
                android:textColor="#a8a8a8"
                android:textSize="18sp"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Super shop"
            android:textSize="25sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
